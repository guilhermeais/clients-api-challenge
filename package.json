  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.2.2",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "axios": "^1.7.2",
    "bson": "^6.7.0",
    "mongodb": "^6.7.0",
    "pino": "^9.2.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "uuidv7": "^1.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.3.9",
    "@testcontainers/mongodb": "^10.10.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
